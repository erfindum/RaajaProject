<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent" android:layout_width="match_parent"
    android:fillViewport="true"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        >
        <View
            android:id="@+id/faq_answer_line_seperator_main"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fourDpDimension"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/colorMainAccent"
            />
        <TextView
            android:id="@+id/faq_answer_fragment_question_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/faq_answer_line_seperator_main"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/fifteenSpDimension"
            android:textColor="@color/textPrimaryColor"
            android:text="@string/faq_question_fragment_question_1_text"
            android:layout_marginTop="@dimen/twentyDpDimension"
            android:paddingLeft="@dimen/tenDpDimension"
            android:paddingStart="@dimen/tenDpDimension"
            android:paddingEnd="@dimen/tenDpDimension"
            />
        <include layout="@layout/seperator_main_grey"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/faq_answer_line_seperator_main_1"
            android:layout_below="@+id/faq_answer_fragment_question_1"
            />
        <TextView
            android:id="@+id/faq_answer_fragment_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/faq_answer_line_seperator_main_1"
            android:textSize="@dimen/fifteenSpDimension"
            android:textColor="@color/textPrimaryColor"
            android:text="@string/faq_question_fragment_question_1_text"
            android:layout_marginTop="@dimen/twentyDpDimension"
            android:paddingLeft="@dimen/tenDpDimension"
            android:paddingStart="@dimen/tenDpDimension"
            android:paddingEnd="@dimen/tenDpDimension"
            />




    </RelativeLayout>
</ScrollView>