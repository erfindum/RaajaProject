<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent" android:layout_width="match_parent" android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <View
            android:id="@+id/user_profile_redeem_line_seperator_main"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fourDpDimension"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/colorMainAccent"
            />

        <TextView
            android:id="@+id/user_profile_redeem_fragment_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_profile_redeem_line_seperator_main"
            android:text="Jack Reacher"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/twentyDpDimension"
            android:textSize="@dimen/twentyFourSpDimension"
            android:textColor="@color/textPrimaryColor"
            />

        <TextView
            android:id="@+id/user_profile_redeem_fragment_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_profile_redeem_fragment_user_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/tenDpDimension"
            android:text="jack.reacher@example.com"
            android:textSize="@dimen/fifteenSpDimension"
            android:textColor="@color/textPrimaryColor"
            />
        <ImageView
            android:id="@+id/user_profile_redeem_fragment_email_icon_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/user_profile_fragment_email_icon_description"
            android:layout_below="@+id/user_profile_redeem_fragment_user_name"
            android:layout_alignTop="@+id/user_profile_redeem_fragment_email"
            android:layout_toLeftOf="@+id/user_profile_redeem_fragment_email"
            android:layout_toStartOf="@id/user_profile_redeem_fragment_email"
            android:src="@drawable/ic_user_screen_mail"
            />

        <View
            android:id="@+id/user_profile_redeem_line_seperator_main_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/oneDpDimension"
            android:layout_below="@+id/user_profile_redeem_fragment_email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/twentyDpDimension"
            android:background="@color/dividerColor"
            />

        <TextView
            android:id="@+id/user_profile_redeem_fragment_points_earned_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_profile_redeem_line_seperator_main_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/twentyDpDimension"
            android:text="@string/user_profile_redeem_fragment_points_earned_text1"
            android:textSize="@dimen/fifteenSpDimension"
            android:textColor="@color/textPrimaryColor"
            />
        <TextView
            android:id="@+id/user_profile_redeem_fragment_points_earned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_profile_redeem_fragment_points_earned_text1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/tenDpDimension"
            android:text="55553"
            android:textSize="@dimen/fourtySpDimension"
            android:textColor="@color/textPrimaryColor"
            />

        <TextView
            android:id="@+id/user_profile_redeem_fragment_points_earned_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_profile_redeem_fragment_points_earned"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/tenDpDimension"
            android:text="@string/user_profile_redeem_fragment_points_earned_text2"
            android:textSize="@dimen/fifteenSpDimension"
            android:textColor="@color/textPrimaryColor"
            />



        <RelativeLayout
            android:id="@+id/user_profile_redeem_fragment_secondary_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_profile_redeem_fragment_points_earned_text2"
            android:layout_alignParentBottom="true"
            >
            <TextView
                android:id="@+id/user_profile_redeem_fragment_enter_details_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/twentyDpDimension"
                android:text="@string/user_profile_redeem_fragment_enter_details_text"
                android:textSize="@dimen/fifteenSpDimension"
                android:textColor="@color/textPrimaryColor"
                android:padding="@dimen/tenDpDimension"
                />

            <View
                android:id="@+id/user_profile_redeem_line_seperator_main_6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/oneDpDimension"
                android:layout_below="@id/user_profile_redeem_fragment_enter_details_text"
                android:layout_centerHorizontal="true"
                android:background="@color/dividerColor"
                />

            <EditText
                android:id="@+id/user_profile_redeem_fragment_enter_paypal_edit_text"
                android:layout_width="@dimen/twoHunderedAndFourtyDpDimension"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/user_profile_redeem_line_seperator_main_6"
                android:textSize="@dimen/fifteenSpDimension"
                android:hint="@string/login_activity_email_edit_hint"
                android:textColorHint="@color/textSecondaryColor"
                android:textColor="@color/textPrimaryColor"
                android:drawableLeft="@drawable/ic_login_edit_email"
                android:drawableStart="@drawable/ic_login_edit_email"
                android:layout_marginTop="@dimen/twentyDpDimension"
                android:paddingRight="@dimen/twentyDpDimension"
                android:paddingEnd="@dimen/twentyDpDimension"
                android:inputType="textEmailAddress"
                />

            <EditText
                android:id="@+id/user_profile_redeem_fragment_enter_password_edit_text"
                android:layout_width="@dimen/twoHunderedAndFourtyDpDimension"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/user_profile_redeem_fragment_enter_paypal_edit_text"
                android:textSize="@dimen/fifteenSpDimension"
                android:hint="@string/login_activity_password_edit_hint"
                android:textColorHint="@color/textSecondaryColor"
                android:textColor="@color/textPrimaryColor"
                android:drawableLeft="@drawable/ic_login_edit_password"
                android:drawableStart="@drawable/ic_login_edit_password"
                android:paddingRight="@dimen/twentyDpDimension"
                android:paddingEnd="@dimen/twentyDpDimension"
                android:inputType="textWebPassword"
                />

            <Button
                android:id="@+id/user_profile_redeem_fragment_redeem_button"
                android:layout_width="@dimen/twoHunderedAndFourtyDpDimension"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_profile_redeem_fragment_enter_password_edit_text"
                android:layout_alignLeft="@+id/user_profile_redeem_fragment_enter_password_edit_text"
                android:layout_alignStart="@+id/user_profile_redeem_fragment_enter_password_edit_text"
                android:text="@string/user_profile_fragment_redeem_cash_text"
                android:textAllCaps="true"
                android:textSize="@dimen/fifteenSpDimension"
                android:background="@drawable/selector_main_button"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/tenDpDimension"
                />




            <ProgressBar
                android:id="@+id/user_profile_fragment_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/tenDpDimension"
                android:layout_below="@id/user_profile_redeem_fragment_redeem_button"
                android:progressBackgroundTint="@color/colorMainAccent"
                android:layout_marginBottom="@dimen/twentyDpDimension"
                android:visibility="invisible"
                />
        </RelativeLayout>

    </RelativeLayout>

</ScrollView>

