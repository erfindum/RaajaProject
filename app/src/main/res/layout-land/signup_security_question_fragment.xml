<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="match_parent"
    android:layout_width="match_parent" android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:background="@color/colorLightPrimary"
        >

        <TextView
            android:id="@+id/security_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/tenDpDimension"
            android:text="@string/signUp_fragment_signup"
            android:textColor="@color/colorMainPrimary"
            android:textSize="@dimen/thirtyFourSpDimension"
            />


        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/security_text"
            >

            <TextView
                android:id="@+id/securityInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="@dimen/tenDpDimension"
                android:paddingTop="@dimen/tenDpDimension"
                android:text="@string/security_fragment_info"
                android:textSize="@dimen/fifteenSpDimension"
                android:textColor="@color/colorMainPrimary"
                android:paddingLeft="@dimen/tenDpDimension"
                android:paddingStart="@dimen/tenDpDimension"
                android:paddingEnd="@dimen/tenDpDimension"
                android:paddingRight="@dimen/tenDpDimension"
                android:lineSpacingMultiplier="1"
                />

            <View
                android:id="@+id/security_line_seperator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/oneDpDimension"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/securityInfo"
                android:background="@color/colorMainPrimary"
                android:layout_marginTop="@dimen/tenDpDimension"
                android:layout_marginLeft="@dimen/tenDpDimension"
                android:layout_marginRight="@dimen/tenDpDimension"
                />

            <EditText
                android:id="@+id/security_fragment_select_question_edit_text"
                android:layout_width="@dimen/twoHunderedAndFourtyDpDimension"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/security_line_seperator"
                android:textSize="@dimen/fifteenSpDimension"
                android:hint="@string/security_fragment_select_question"
                android:textColorHint="@color/textSecondaryColor"
                android:textColor="@color/textPrimaryColor"
                android:drawableLeft="@drawable/ic_login_edit_person"
                android:drawableStart="@drawable/ic_login_edit_person"
                android:layout_marginTop="@dimen/thirtyDpDimension"
                android:paddingRight="@dimen/twentyDpDimension"
                android:paddingEnd="@dimen/twentyDpDimension"
                android:inputType="none"
                android:cursorVisible="false"
                />

            <EditText
                android:id="@+id/security_fragment_answer_question_edit_text"
                android:layout_width="@dimen/twoHunderedAndFourtyDpDimension"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/security_fragment_select_question_edit_text"
                android:textSize="@dimen/fifteenSpDimension"
                android:hint="@string/security_fragment_select_answer"
                android:textColorHint="@color/textSecondaryColor"
                android:textColor="@color/textPrimaryColor"
                android:drawableLeft="@drawable/ic_login_edit_password"
                android:drawableStart="@drawable/ic_login_edit_password"
                android:paddingRight="@dimen/twentyDpDimension"
                android:paddingEnd="@dimen/twentyDpDimension"
                android:inputType="text"
                android:maxLines="1"
                />

            <Button
                android:id="@+id/security_fragment_signUp_button"
                android:layout_width="@dimen/twoHunderedAndFourtyDpDimension"
                android:layout_height="wrap_content"
                android:layout_below="@+id/security_fragment_answer_question_edit_text"
                android:layout_alignLeft="@+id/security_fragment_answer_question_edit_text"
                android:layout_alignStart="@+id/security_fragment_answer_question_edit_text"
                android:text="@string/login_activity_signUp"
                android:textAllCaps="true"
                android:textSize="@dimen/fifteenSpDimension"
                android:background="@drawable/selector_main_button"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/tenDpDimension"
                />

            <ProgressBar
                android:id="@+id/security_fragment_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/tenDpDimension"
                android:layout_below="@id/security_fragment_signUp_button"
                android:progressBackgroundTint="@color/colorMainPrimary"

                />


        </RelativeLayout>



    </RelativeLayout>
</ScrollView>