<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="60dp"
    android:layout_marginStart="@dimen/tenDpDimension"
    android:layout_marginEnd="@dimen/tenDpDimension"
    android:background="@color/white"
    app:cardCornerRadius="0dp"
    >

<RelativeLayout android:layout_height="match_parent" android:layout_width="match_parent"
    >
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/recycler_item_app_icon_imageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/fifteenDpDimension"
            android:layout_marginStart="@dimen/fifteenDpDimension"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/img_pin_normal"
            android:scaleType="fitCenter"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/recycler_item_app_appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/recycler_item_app_icon_imageView"
            android:layout_marginStart="@dimen/fifteenDpDimension"
            android:textSize="@dimen/fifteenSpDimension"
            android:textColor="@color/textDarkGrey"
            />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/recycler_item_lock_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/fifteenDpDimension"
            android:layout_marginTop="@dimen/fifteenDpDimension"
            android:layout_marginStart="@dimen/tenDpDimension"
            android:background="@color/white"
            app:srcCompat="@drawable/ic_app_lock_activity_lock_unselected"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>